      <script>
        // Script para manejar el env칤o del formulario a WhatsApp
        document
          .getElementById("whatsappForm")
          ?.addEventListener("submit", function (e) {
            e.preventDefault();

            // Obtener valores del formulario
            const fullName = (
              document.getElementById("fullName") as HTMLInputElement
            ).value;
            const email = (document.getElementById("email") as HTMLInputElement)
              .value;
            const referenceNumber = (
              document.getElementById("referenceNumber") as HTMLInputElement
            ).value;
            const message = (
              document.getElementById("message") as HTMLTextAreaElement
            ).value;

            // Construir el mensaje para WhatsApp
            let whatsappMessage = `*Nuevo Contacto - Brasargent Rodizio*\n\n`;
            whatsappMessage += `游녻 *Nombre:* ${fullName}\n`;

            if (email) {
              whatsappMessage += `游닎 *Email:* ${email}\n`;
            }

            whatsappMessage += `游 *N칰mero de Referencia:* ${referenceNumber}\n\n`;
            whatsappMessage += `游눫 *Mensaje:*\n${message}`;

            // Codificar el mensaje para URL
            const encodedMessage = encodeURIComponent(whatsappMessage);

            // N칰mero de WhatsApp (sin el +)
            const whatsappNumber = "59178555886";

            // Abrir WhatsApp con el mensaje
            window.open(
              `https://wa.me/${whatsappNumber}?text=${encodedMessage}`,
              "_blank",
            );

            // Opcional: Resetear el formulario
