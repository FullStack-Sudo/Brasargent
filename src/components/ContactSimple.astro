---
// Sección de contacto minimalista con info y mapa
const whatsappNumber = "59178555886";
const whatsappMessage = encodeURIComponent(
  "Hola! Me gustaría hacer una reserva en Brasargent Rodizio",
);
---

<section id="contacto" class="py-16 sm:py-20 lg:py-24 bg-[#fffaf0]">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-12">
      <h2
        class="text-3xl sm:text-4xl lg:text-5xl font-bold text-[#1a1a1a] mb-4"
      >
        Visítanos en <span
          class="bg-gradient-to-r from-[#9e2a2b] to-[#d4af37] bg-clip-text text-transparent"
          >Patio Design</span
        >
      </h2>
      <p class="text-lg sm:text-xl text-gray-600 max-w-2xl mx-auto">
        Estamos listos para ofrecerte la mejor experiencia gastronómica
      </p>
    </div>

    <!-- Grid de información y mapa -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-start">
      <!-- Información de contacto -->
      <div class="space-y-6">
        <!-- Dirección -->
        <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-100">
          <div class="flex items-start gap-4">
            <div
              class="w-12 h-12 bg-gradient-to-br from-[#9e2a2b] to-[#d4af37] rounded-full flex items-center justify-center flex-shrink-0"
            >
              <svg
                class="w-6 h-6 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                ></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-bold text-lg text-[#1a1a1a] mb-1">Dirección</h3>
              <p class="text-gray-600">
                Patio Design<br />
                Av. Busch 3er anillo<br />
                Santa Cruz de la Sierra, Bolivia
              </p>
            </div>
          </div>
        </div>

        <!-- Teléfono / WhatsApp -->
        <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-100">
          <div class="flex items-start gap-4">
            <div
              class="w-12 h-12 bg-gradient-to-br from-[#9e2a2b] to-[#d4af37] rounded-full flex items-center justify-center flex-shrink-0"
            >
              <svg
                class="w-6 h-6 text-white"
                fill="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"
                ></path>
              </svg>
            </div>
            <div>
              <h3 class="font-bold text-lg text-[#1a1a1a] mb-2">Reservas</h3>
              <a
                href={`https://wa.me/${whatsappNumber}?text=${whatsappMessage}`}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 text-[#9e2a2b] hover:text-[#d4af37] font-semibold text-xl transition-colors"
              >
                <span>78555886</span>
                <svg
                  class="w-5 h-5"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                  ></path>
                </svg>
              </a>
            </div>
          </div>
        </div>

        <!-- Horarios -->
        <div class="bg-white rounded-2xl p-6 shadow-lg border border-gray-100">
          <div class="flex items-start gap-4">
            <div
              class="w-12 h-12 bg-gradient-to-br from-[#9e2a2b] to-[#d4af37] rounded-full flex items-center justify-center flex-shrink-0"
            >
              <svg
                class="w-6 h-6 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <div>
              <h3 class="font-bold text-lg text-[#1a1a1a] mb-2">Horarios</h3>
              <div class="text-gray-600 space-y-1">
                <p>Lunes - Jueves: 12:00 - 23:00</p>
                <p>Viernes - Sábado: 12:00 - 00:00</p>
                <p>Domingo: 12:00 - 22:00</p>
              </div>
            </div>
          </div>
        </div>

        <!-- CTA de reserva -->
        <a
          href={`https://wa.me/${whatsappNumber}?text=${whatsappMessage}`}
          target="_blank"
          rel="noopener noreferrer"
          class="block w-full bg-gradient-to-r from-[#9e2a2b] to-[#d4af37] text-white text-center py-4 rounded-full font-bold text-lg hover:shadow-2xl hover:scale-105 transition-all duration-300"
        >
          Hacer una Reserva
        </a>
      </div>

      <!-- Mapa -->
      <div
        class="rounded-2xl overflow-hidden shadow-2xl h-[500px] lg:h-full min-h-[400px]"
      >
        <!-- CAMBIAR: Actualiza las coordenadas del mapa con tu ubicación real -->
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3799.7!2d-63.1812!3d-17.7833!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMTfCsDQ2JzU5LjkiUyA2M8KwMTAnNTIuMyJX!5e0!3m2!1ses!2sbo!4v1234567890"
          width="100%"
          height="100%"
          style="border:0;"
          allowfullscreen=""
          loading="lazy"
          title="Ubicación Brasargent Rodizio"></iframe>
      </div>
    </div>
  </div>
</section>
