---
// Hero section con imagen full-bleed, overlay oscuro y CTA WhatsApp
const whatsappNumber = "59178555886";
const whatsappMessage = encodeURIComponent(
  "Hola! Me gustaría hacer una reserva en Brasargent",
);
---

<section
  id="inicio"
  class="relative h-[90vh] min-h-[600px] flex items-center justify-center overflow-hidden"
>
  <!-- Video de fondo de YouTube -->
  <div class="absolute inset-0 z-0">
    <!-- YouTube iframe como fondo -->
    <iframe
      class="absolute top-1/2 left-1/2 w-[300%] h-[300%] -translate-x-1/2 -translate-y-1/2 pointer-events-none"
      src="https://www.youtube.com/embed/Rz44dRvbFPM?autoplay=1&mute=1&loop=1&playlist=Rz44dRvbFPM&controls=0&showinfo=0&rel=0&modestbranding=1&playsinline=1"
      title="Brasargent Background"
      frameborder="0"
      allow="autoplay; encrypted-media"></iframe>
    <!-- Overlay oscuro para mejorar legibilidad del texto -->
    <div
      class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/50 to-black/70"
    >
    </div>
  </div>

  <!-- Contenido centrado -->
  <div class="relative z-10 text-center px-4 sm:px-6 lg:px-8 max-w-4xl mx-auto">
    <div
      id="hero-cta-container"
      class="transition-all duration-700 ease-out"
      data-aos="fade-up"
      data-aos-delay="300"
    >
      <a
        href="/#contacto"
        id="hero-reserve-btn"
        class="inline-block bg-[#9e2a2b] text-white px-12 py-6 rounded-lg font-bold text-2xl hover:bg-[#8a2426] hover:shadow-2xl hover:shadow-[#9e2a2b]/60 transition-all duration-300 hover:scale-105 border-2 border-[#9e2a2b] hover:border-[#fa69695e]"
      >
        Reservar Mesa
      </a>
    </div>
  </div>

  <script>
    // Animación del botón Reservar Mesa
    window.addEventListener("scroll", () => {
      const heroBtn = document.getElementById("hero-reserve-btn");
      const heroCont = document.getElementById("hero-cta-container");
      const navbarBtn = document.querySelector('nav a[href="/#contacto"]');

      if (!heroBtn || !heroCont || !navbarBtn) return;

      const scrollY = window.scrollY;
      const threshold = 200; // Píxeles de scroll para activar la animación

      if (scrollY > threshold) {
        // Ocultar botón del hero con fade out y scale
        heroCont.style.opacity = "0";
        heroCont.style.transform = "translateY(-50px) scale(0.8)";
        heroCont.style.pointerEvents = "none";
      } else {
        // Mostrar botón del hero
        heroCont.style.opacity = "1";
        heroCont.style.transform = "translateY(0) scale(1)";
        heroCont.style.pointerEvents = "auto";
      }
    });
  </script>

  <!-- Indicador de scroll -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 z-10 animate-bounce">
    <svg
      class="w-6 h-6 text-white/60"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>
