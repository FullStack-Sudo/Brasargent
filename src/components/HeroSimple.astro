---
// Hero section con imagen full-bleed, overlay oscuro y CTA WhatsApp
const whatsappNumber = "59178555886";
const whatsappMessage = encodeURIComponent(
  "Hola! Me gustaría hacer una reserva en Brasargent Rodizio",
);
---

<section
  id="inicio"
  class="relative h-[90vh] min-h-[600px] flex items-center justify-center overflow-hidden"
>
  <!-- Imagen de fondo -->
  <!-- CAMBIAR: Reemplaza '/hero-bg.jpg' con tu imagen de parrilla real -->
  <div class="absolute inset-0 z-0">
    <img
      src="/hero-bg.jpg"
      alt="Parrilla Brasargent"
      class="w-full h-full object-cover"
    />
    <!-- Overlay oscuro para mejorar legibilidad del texto -->
    <div
      class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/50 to-black/70"
    >
    </div>
  </div>

  <!-- Contenido centrado -->
  <div class="relative z-10 text-center px-4 sm:px-6 lg:px-8 max-w-4xl mx-auto">
    <!-- Título principal -->
    <h1
      class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold text-white mb-6 leading-tight"
    >
      El mejor <span
        class="bg-gradient-to-r from-[#9e2a2b] to-[#d4af37] bg-clip-text text-transparent"
        >Rodizio</span
      > del País
    </h1>

    <!-- Subtítulo -->
    <p
      class="text-lg sm:text-xl md:text-2xl text-white/90 mb-4 max-w-2xl mx-auto"
    >
      Cortes premium servidos continuamente en tu mesa
    </p>

    <!-- Precio destacado -->
    <div
      class="inline-block bg-[#d4af37] text-[#1a1a1a] px-8 py-3 rounded-full font-bold text-2xl mb-8"
    >
      Bs. 120 por persona
    </div>

    <!-- CTAs -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <!-- CTA Principal - WhatsApp -->
      <a
        href={`https://wa.me/${whatsappNumber}?text=${whatsappMessage}`}
        target="_blank"
        rel="noopener noreferrer"
        class="group bg-gradient-to-r from-[#9e2a2b] to-[#d4af37] text-white px-8 py-4 rounded-full font-bold text-lg hover:shadow-2xl hover:scale-105 transition-all duration-300 flex items-center gap-2 w-full sm:w-auto justify-center"
      >
        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
          <path
            d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"
          ></path>
        </svg>
        Reservar por WhatsApp
      </a>

      <!-- CTA Secundario - Ver Menú -->
      <a
        href="#menu"
        class="bg-white/10 backdrop-blur-sm text-white px-8 py-4 rounded-full font-bold text-lg border-2 border-white/30 hover:bg-white/20 hover:border-white/50 transition-all duration-300 w-full sm:w-auto text-center"
      >
        Ver Menú
      </a>
    </div>

    <!-- Info adicional -->
    <div class="mt-12 flex flex-wrap justify-center gap-8 text-white/80">
      <div class="flex items-center gap-2">
        <svg
          class="w-5 h-5 text-[#d4af37]"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
          ></path>
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        <span class="text-sm sm:text-base"
          >Patio Design, Av. Busch 3er anillo</span
        >
      </div>
      <div class="flex items-center gap-2">
        <svg
          class="w-5 h-5 text-[#d4af37]"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <span class="text-sm sm:text-base">Lun - Dom: 12:00 - 23:00</span>
      </div>
    </div>
  </div>

  <!-- Indicador de scroll -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 z-10 animate-bounce">
    <svg
      class="w-6 h-6 text-white/60"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>
