---
// Carrusel infinito de platos
const whatsappNumber = "59178555886";

// Array con todas las imágenes de platos
const platosImages = [
  "/img/platos/1.webp",
  "/img/platos/2.webp",
  "/img/platos/3.webp",
  "/img/platos/4.webp",
  "/img/platos/5.webp",
  "/img/platos/6.webp",
  "/img/platos/7.webp",
  "/img/platos/8.webp",
  "/img/platos/9.webp",
  "/img/platos/10.webp",
  "/img/platos/11.webp",
  "/img/platos/12.webp",
  "/img/platos/13.webp",
];

// Duplicamos el array para crear el efecto infinito
const allImages = [...platosImages, ...platosImages];
---

<section id="menu" class="py-16 sm:py-20 lg:py-24 bg-gradient-to-b from-white to-gray-50 overflow-hidden">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Header de la sección -->
     <br>
    <div class="text-center mb-12 sm:mb-16" data-aos="fade-up">
      <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-[#1a1a1a] mb-4">
        Nuestros <span class="bg-gradient-to-r from-[#9e2a2b] to-[#d4af37] bg-clip-text text-transparent">Platos Premium</span>
      </h2>
      <br>
    </div>

    <!-- Carrusel Infinito -->
    <div class="relative" data-aos="fade-in" data-aos-delay="200">
      <!-- Gradientes de fade en los bordes -->
      <div class="absolute left-0 top-0 bottom-0 w-32 bg-gradient-to-r  z-10 pointer-events-none"></div>
      <div class="absolute right-0 top-0 bottom-0 w-32 bg-gradient-to-l z-10 pointer-events-none"></div>
      
      <!-- Contenedor del carrusel -->
      <div class="carousel-container overflow-hidden py-8">
        <div class="carousel-track flex gap-4" style="animation: scroll-left 120s linear infinite;">
          {allImages.map((image, index) => (
            <div class="carousel-item flex-shrink-0">
              <div class="relative group">
                <div class="w-80 h-80 rounded-3xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-105">
                  <img
                    src={image}
                    alt={`Plato ${(index % platosImages.length) + 1}`}
                    class="w-full h-full object-cover"
                    loading="lazy"
                  />
                  <!-- Overlay con gradiente -->
                  <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
<br>

<style>
  @keyframes scroll-left {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .carousel-track {
    width: max-content;
  }

  /* Pausar animación al hover */
  .carousel-container:hover .carousel-track {
    animation-play-state: paused;
  }
</style>
