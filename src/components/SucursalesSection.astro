<script>
  // Manejo del Modal
  document.addEventListener("DOMContentLoaded", () => {
    const modal = document.getElementById("menu-modal");
    const modalSucursalName = document.getElementById("modal-sucursal-name");
    const menuContent = document.getElementById("menu-content");
    const navButtons = document.querySelectorAll(".menu-nav-btn");
    const menuSections = document.querySelectorAll(".menu-section");
    const openButtons = document.querySelectorAll(
      '[data-modal-open="menu-modal"]',
    );
    const closeButtons = document.querySelectorAll(
      '[data-modal-close="menu-modal"]',
    );

    // Función para actualizar el botón activo
    const updateActiveButton = (sectionId: string) => {
      navButtons.forEach((btn) => {
        const isActive = btn.getAttribute("data-section") === sectionId;
        if (isActive) {
          btn.classList.add("text-[#9e2a2b]", "border-[#9e2a2b]");
          btn.classList.remove("text-gray-600", "border-transparent");
        } else {
          btn.classList.remove("text-[#9e2a2b]", "border-[#9e2a2b]");
          btn.classList.add("text-gray-600", "border-transparent");
        }
      });
    };

    // IntersectionObserver para detectar secciones visibles
    const observerOptions = {
      root: menuContent,
      rootMargin: "-20% 0px -70% 0px",
      threshold: 0,
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          const sectionId = entry.target.getAttribute("id");
          if (sectionId) {
            updateActiveButton(sectionId);
          }
        }
      });
    }, observerOptions);

    // Observar todas las secciones del menú
    menuSections.forEach((section) => {
      observer.observe(section);
    });

    // Scroll suave al hacer click en los botones de navegación
    navButtons.forEach((button) => {
      button.addEventListener("click", () => {
        const sectionId = button.getAttribute("data-section");
        if (!sectionId) return;

        const section = document.getElementById(sectionId);
        if (section && menuContent) {
          const offsetTop = section.offsetTop - menuContent.offsetTop - 20;
          menuContent.scrollTo({
            top: offsetTop,
            behavior: "smooth",
          });
        }
      });
    });

    // Abrir modal
    openButtons.forEach((button) => {
      button.addEventListener("click", () => {
        const sucursalName = button.getAttribute("data-sucursal-name");
        if (modalSucursalName && sucursalName) {
          modalSucursalName.textContent = sucursalName;
        }
        modal?.classList.remove("hidden");
        modal?.classList.add("flex");
        document.body.style.overflow = "hidden";

        // Resetear scroll y activar primera sección
        if (menuContent) {
          menuContent.scrollTop = 0;
        }
        updateActiveButton("entradas");
      });
    });

    // Cerrar modal
    const closeModal = () => {
      modal?.classList.add("hidden");
      modal?.classList.remove("flex");
      document.body.style.overflow = "";
    };

    closeButtons.forEach((button) => {
      button.addEventListener("click", closeModal);
    });

    // Cerrar al hacer click en el backdrop
    modal?.addEventListener("click", (e) => {
      if (e.target === modal) {
        closeModal();
      }
    });

    // Cerrar con tecla ESC
    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape" && !modal?.classList.contains("hidden")) {
        closeModal();
      }
    });
  });
</script>

