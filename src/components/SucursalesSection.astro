---
// Componente de Sucursales con diseño futurista
const sucursales = [
  {
    name: "Churrasqueria",
    rating: 4.3,
    reviews: "1.2K",
    address: "Av. Beni",
    hours: "Abre a las 11:30 a. m.",
    image: "/img/sucursales/churrasqueria.webp",
    whatsapp: "59178787878", // Reemplazar con el número real
  },
  {
    name: "Rodizio",
    rating: 4.5,
    reviews: "1.3K",
    price: "",
    address: "C. 12 Oeste",
    hours: "Abre a las 11 a. m.",
    image: "/img/sucursales/rodizio.webp",
    featured: true,
    whatsapp: "59178787878", // Reemplazar con el número real
  },
  {
    name: "Las Brisas",
    rating: 3.9,
    reviews: "100",
    address: "Las Brisas",
    hours: "",
    image: "/img/sucursales/brisas.webp",
    whatsapp: "59178556522", // Reemplazar con el número real
  },
  {
    name: "Nueva Sucursal",
    rating: 3.9,
    reviews: "100",
    address: "Las Brisas",
    hours: "",
    image: "/img/sucursales/brisas.webp",
    whatsapp: "59178787878", // Reemplazar con el número real
  },
];
---

<section id="sucursales" class="relative py-24 overflow-hidden">
  <!-- Imagen de fondo -->
  <div class="absolute inset-0 w-full h-full">
    <img
      src="/img/fondo/sucursales.webp"
      alt="Brasargent Background"
      class="w-full h-full object-cover"
    />
  </div>

  <!-- Overlay oscuro para legibilidad -->
  <div class="absolute inset-0 bg-black/60 backdrop-blur-[2px]"></div>

  <!-- Efectos de fondo decorativos (reducidos) -->
  <div class="absolute inset-0 opacity-5">
    <div
      class="absolute top-20 left-10 w-96 h-96 bg-[#d4af37] rounded-full filter blur-[120px] animate-pulse"
    >
    </div>
    <div
      class="absolute bottom-20 right-10 w-96 h-96 bg-[#9e2a2b] rounded-full filter blur-[120px] animate-pulse"
      style="animation-delay: 1s;"
    >
    </div>
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <br />
    <div class="text-center mb-16 space-y-4">
      <h2
        class="text-5xl md:text-6xl font-bold text-white drop-shadow-[0_2px_8px_rgba(0,0,0,0.8)]"
      >
        <span
          class="bg-gradient-to-r from-[#d4af37] via-[#f4d03f] to-[#d4af37] bg-clip-text text-transparent animate-gradient drop-shadow-[0_2px_8px_rgba(0,0,0,0.8)]"
        >
          Encuentra tu Brasargent más cercano
        </span>
      </h2>
      <br />
    </div>

    <!-- Grid de Sucursales - Grid cuadrado centrado -->
    <div class="flex justify-center">
      <div
        class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-7xl mx-auto"
      >
        {
          sucursales.map((sucursal) => (
            <div class="group relative w-full min-h-[600px] bg-white rounded-2xl shadow-2xl hover:shadow-[0_20px_60px_rgba(0,0,0,0.5)] transition-all duration-300 flex flex-col pb-6">
              {/* Imagen de la sucursal */}
              <div class="relative h-64 overflow-hidden rounded-t-2xl">
                <img
                  src={sucursal.image}
                  alt={sucursal.name}
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                />
                {/* Badge de destacado */}
                {sucursal.featured && (
                  <div class="absolute top-4 right-4 bg-gradient-to-r from-[#d4af37] to-[#f4d03f] text-black text-xs font-bold px-4 py-2 rounded-full shadow-lg">
                    ⭐ DESTACADO
                  </div>
                )}
                {/* Overlay oscuro en la imagen */}
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent" />
              </div>

              {/* Contenido de la card - con grow para empujar botones abajo */}
              <div class="p-8 flex flex-col grow">
                {/* Nombre y rating */}
                <h3 class="text-3xl font-bold text-gray-900 mb-4">
                  {sucursal.name}
                </h3>

                <div class="flex items-center gap-2 mb-3">
                  <div class="flex items-center gap-1">
                    <span class="text-[#d4af37] text-lg">★</span>
                    <span class="text-gray-900 font-semibold">
                      {sucursal.rating}
                    </span>
                    <span class="text-gray-500 text-sm">
                      ({sucursal.reviews})
                    </span>
                  </div>
                  {sucursal.price && (
                    <span class="text-[#d4af37] font-semibold ml-auto">
                      {sucursal.price}
                    </span>
                  )}
                </div>

                {/* Tipo */}
                <p class="text-gray-600 text-sm mb-4">{sucursal.type}</p>

                {/* Dirección */}
                <div class="flex items-start gap-2 mb-3">
                  <svg
                    class="w-5 h-5 text-[#d4af37] mt-0.5 shrink-0"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                    />
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                    />
                  </svg>
                  <p class="text-gray-700 text-sm">{sucursal.address}</p>
                </div>

                {/* Horario */}
                {sucursal.hours && (
                  <div class="flex items-center gap-2 mb-4">
                    <svg
                      class="w-5 h-5 text-[#d4af37]"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                      />
                    </svg>
                    <div class="text-sm">
                      {sucursal.status && (
                        <span class="text-red-500 font-semibold">
                          {sucursal.status}
                        </span>
                      )}
                      <span class="text-gray-600"> · {sucursal.hours}</span>
                    </div>
                  </div>
                )}

                {/* Testimonial */}
                {sucursal.testimonial && (
                  <p class="text-gray-600 italic text-sm mb-4 line-clamp-2">
                    "{sucursal.testimonial}"
                  </p>
                )}

                {/* Spacer superior para centrar botones */}
                <div class="grow" />

                {/* Botones de Acción - Circulares - Centrados */}
                <div class="flex gap-6 items-center justify-center py-6">
                  {/* Botón Ver Ubicación - Verde Google (Circular) */}
                  <a
                    href={`https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(sucursal.name + " " + sucursal.address)}`}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="w-16 h-16 flex items-center justify-center bg-[#34A853] text-white rounded-full hover:bg-[#2d9348] hover:shadow-2xl hover:shadow-[#34A853]/60 transition-all duration-300 hover:scale-110 group"
                    title="Ver ubicación en Google Maps"
                  >
                    <svg
                      class="w-7 h-7 group-hover:scale-110 transition-transform duration-300"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                      />
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                      />
                    </svg>
                  </a>

                  {/* Botón Ver Menú - Rojo Vino (Circular) - Abre Modal */}
                  <button
                    type="button"
                    data-modal-open="menu-modal"
                    data-sucursal-name={sucursal.name}
                    class="w-16 h-16 flex items-center justify-center bg-[#9e2a2b] text-white rounded-full hover:bg-[#8a2426] hover:shadow-2xl hover:shadow-[#9e2a2b]/60 transition-all duration-300 hover:scale-110 group"
                    title="Ver nuestro menú"
                  >
                    <svg
                      class="w-7 h-7 group-hover:scale-110 transition-transform duration-300"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                      />
                    </svg>
                  </button>

                  {/* Botón WhatsApp - Verde WhatsApp (Circular) */}
                  <a
                    href={`https://wa.me/${sucursal.whatsapp}?text=${encodeURIComponent(`Hola, me gustaría hacer una consulta sobre ${sucursal.name}`)}`}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="w-16 h-16 flex items-center justify-center bg-[#25D366] text-white rounded-full hover:bg-[#20ba5a] hover:shadow-2xl hover:shadow-[#25D366]/60 transition-all duration-300 hover:scale-110 group"
                    title="Contactar por WhatsApp"
                  >
                    <svg
                      class="w-7 h-7 group-hover:scale-110 transition-transform duration-300"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z" />
                    </svg>
                  </a>
                </div>

                {/* Spacer inferior para centrar botones */}
                <div class="grow" />

                {/* Logo en el pie de la tarjeta */}
                <div class="flex justify-center items-center pt-6 pb-2 border-t border-gray-100 mt-4">
                  <img
                    src="/img/logo/logoRojo-SF.png"
                    alt="Brasargent Logo"
                    class="h-20 w-auto opacity-80 hover:opacity-100 transition-opacity duration-300"
                  />
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
    <br />
    <br />
    <br />
    <br />
    {/* CTA Final */}
    <div class="mt-16 text-center">
      <div
        class="inline-block bg-white/80 backdrop-blur-xl rounded-2xl border border-gray-200 shadow-lg p-8"
      >
        <h3 class="text-2x1 font-bold text-gray-900 mb-4">
          <br />
          <br />
          ¿No encuentras tu sucursal más cercana?
        </h3>
        <p class="text-gray-600 mb-6">
          Contáctanos y te ayudaremos a encontrar la mejor opción para ti
        </p>
        <a
          href="/#contacto"
          class="inline-block bg-[#9e2a2b] text-white font-semibold px-10 py-4 rounded-lg hover:bg-[#8a2426] hover:shadow-xl hover:shadow-[#9e2a2b]/50 transition-all duration-300 hover:scale-105 border border-[#9e2a2b] hover:border-[#d4af37]"
        >
          Contáctanos
        </a>
      </div>
    </div>
  </div>
  <br />
  <br />
  <br />
  <br />

  {/* Modal del Menú */}
  <div
    id="menu-modal"
    class="fixed inset-0 z-50 hidden items-center justify-center bg-black/70 backdrop-blur-sm"
    data-modal="menu-modal"
  >
    <div
      class="relative max-w-4xl w-full mx-auto bg-white rounded-3xl shadow-2xl overflow-hidden animate-modal-enter"
    >
      {/* Header del Modal con Logo */}
      <div class="relative bg-[#9e2a2b] p-6">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-4">
            <img
              src="/img/logo/logoRojo-SF.png"
              alt="Brasargent Logo"
              class="h-16 w-auto"
            />
          </div>

          <div class="text-white text-right">
            <h2 id="modal-sucursal-name" class="text-2xl font-bold">
              Brasargent
            </h2>
          </div>

          {/* Botón Cerrar */}
          <button
            type="button"
            data-modal-close="menu-modal"
            class="w-10 h-10 flex items-center justify-center bg-white/20 hover:bg-white/30 text-white rounded-full transition-all duration-300 hover:scale-110"
            title="Cerrar"
          >
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
      </div>

      {/* Barra de Navegación Sticky */}
      <div
        class="sticky top-0 z-10 bg-white border-b border-gray-200 shadow-md"
      >
        <nav
          class="flex justify-center items-center gap-6 py-4 px-6"
          id="menu-nav"
        >
          <button
            data-section="entradas"
            class="menu-nav-btn px-4 py-2 text-lg font-bold text-gray-600 hover:text-[#9e2a2b] hover:bg-gray-50 transition-all duration-300 border-b-2 border-transparent rounded-lg"
          >
            Entradas
          </button>
          <button
            data-section="cortes-clasicos"
            class="menu-nav-btn px-4 py-2 text-lg font-bold text-gray-600 hover:text-[#9e2a2b] hover:bg-gray-50 transition-all duration-300 border-b-2 border-transparent rounded-lg"
          >
            Cortes Clásicos
          </button>
          <button
            data-section="platos-premium"
            class="menu-nav-btn px-4 py-2 text-lg font-bold text-gray-600 hover:text-[#9e2a2b] hover:bg-gray-50 transition-all duration-300 border-b-2 border-transparent rounded-lg"
          >
            Platos Premium
          </button>
          <button
            data-section="cortes-junior"
            class="menu-nav-btn px-4 py-2 text-lg font-bold text-gray-600 hover:text-[#9e2a2b] hover:bg-gray-50 transition-all duration-300 border-b-2 border-transparent rounded-lg"
          >
            Cortes Junior
          </button>
          <button
            data-section="bebidas"
            class="menu-nav-btn px-4 py-2 text-lg font-bold text-gray-600 hover:text-[#9e2a2b] hover:bg-gray-50 transition-all duration-300 border-b-2 border-transparent rounded-lg"
          >
            Bebidas
          </button>
        </nav>
      </div>

      {/* Contenido del Modal - Menú HTML */}
      <div
        class="max-h-[70vh] overflow-y-auto bg-gradient-to-br from-gray-50 to-gray-100 p-6 flex justify-center"
        id="menu-content"
      >
        {/* Contenido del Menú en Una Sola Columna Centrada */}
        <div class="max-w-3xl w-full">
          <div class="space-y-8">
            {/* ENTRADAS */}
            <div id="entradas" class="menu-section">
              <h4
                class="text-2xl font-bold text-gray-800 mb-4 pb-2 border-b-2 border-[#d4af37]"
              >
                ENTRADAS
              </h4>
              <div class="space-y-2">
                <div class="flex justify-between items-start">
                  <span class="text-gray-700">EMPANADAS TUCUMANAS</span>
                  <span class="text-[#9e2a2b] font-semibold ml-2">Bs.10</span>
                </div>
                <div class="flex justify-between items-start">
                  <span class="text-gray-700"
                    >MIX DE ACHURAS<br /><span class="text-sm text-gray-500"
                      >(Ubre, Riñón y Chinchulli)</span
                    ></span
                  >
                  <span class="text-[#9e2a2b] font-semibold ml-2">Bs.59</span>
                </div>
              </div>
            </div>

            {/* CORTES CLÁSICOS */}
            <div id="cortes-clasicos" class="menu-section">
              <h4
                class="text-2xl font-bold text-gray-800 mb-4 pb-2 border-b-2 border-[#d4af37]"
              >
                CORTES CLÁSICOS
              </h4>
              <div class="space-y-2">
                <div class="flex justify-between items-start">
                  <span class="text-gray-700">PUNTA DE "S"</span>
                  <span class="text-[#9e2a2b] font-semibold ml-2">Bs.75</span>
                </div>
                <div class="flex justify-between items-start">
                  <span class="text-gray-700">BIFE DE CHORIZO</span>
                  <span class="text-[#9e2a2b] font-semibold ml-2">Bs.72</span>
                </div>
                <div class="flex justify-between items-start">
                  <span class="text-gray-700">OJO DE BIFE</span>
                  <span class="text-[#9e2a2b] font-semibold ml-2">Bs.75</span>
                </div>
                <div class="flex justify-between items-start">
                  <span class="text-gray-700">CUADRIL (PARA 1 PERSONA)</span>
                  <span class="text-[#9e2a2b] font-semibold ml-2">Bs.72</span>
                </div>
                <div class="flex justify-between items-start">
                  <span class="text-gray-700">CUADRIL (PARA 2 PERSONAS)</span>
                  <span class="text-[#9e2a2b] font-semibold ml-2">Bs.140</span>
                </div>
                <div class="flex justify-between items-start">
                  <span class="text-gray-700">ASADO DE TIRA</span>
                  <span class="text-[#9e2a2b] font-semibold ml-2">Bs.70</span>
                </div>
                <div class="flex justify-between items-start">
                  <span class="text-gray-700">COSTELETA</span>
                  <span class="text-[#9e2a2b] font-semibold ml-2">Bs.68</span>
                </div>
                <div class="flex justify-between items-start">
                  <span class="text-gray-700">PACUMUTO DE RES</span>
                  <span class="text-[#9e2a2b] font-semibold ml-2">Bs.48</span>
