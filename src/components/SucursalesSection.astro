---
// Componente de Sucursales con diseño futurista
const sucursales = [
  {
    name: "Brasargent Churrasqueria",
    rating: 4.3,
    reviews: "1.2K",
    price: "Bs 100-120",
    type: "Restaurante",
    address: "Av. Beni",
    hours: "Abre a las 11:30 a. m.",
    image: "/img/sucursales/churrasqueria.webp",
  },
  {
    name: "Brasargent Rodizio",
    rating: 4.5,
    reviews: "1.3K",
    price: "",
    type: "Bufé",
    address: "C. 12 Oeste",
    hours: "Abre a las 11 a. m.",
    image: "/img/sucursales/rodizio.webp",
    featured: true,
  },
  {
    name: "Brasargent Express - IC Norte",
    rating: 3.9,
    reviews: "78",
    price: "",
    type: "Carne",
    address: "IC Norte",
    hours: "Abre a las 11:30 a. m.",
    image: "/img/sucursales/icNorte.webp",
  },
  {
    name: "Brasargent - Las Brisas",
    rating: 3.9,
    reviews: "100",
    price: "",
    type: "Restaurante",
    address: "Las Brisas",
    hours: "",
    image: "/img/sucursales/brisas.webp",
  },
  {
    name: "Brasargent Express Ventura",
    rating: 3.5,
    reviews: "40",
    price: "",
    type: "Restaurante",
    address: "Ventura Mall",
    hours: "Abre a las 11 a. m.",
    image: "/img/sucursales/ventura.webp",
  },
  {
    name: "Brasargent Express Belen",
    rating: 3.3,
    reviews: "21",
    price: "Bs 40-60",
    type: "Restaurante",
    address: "Av. Cristo Redentor",
    hours: "Abre a las 11 a. m.",
    services: ["Consumo en el lugar", "Para llevar"],
    image: "/img/sucursales/belen.webp",
  },
];
---

<section
  id="sucursales"
  class="relative py-24 bg-gradient-to-br from-gray-100 via-gray-50 to-white overflow-hidden"
>
  <!-- Efectos de fondo futuristas -->
  <div class="absolute inset-0 opacity-10">
    <div
      class="absolute top-20 left-10 w-96 h-96 bg-[#d4af37] rounded-full filter blur-[120px] animate-pulse"
    >
    </div>
    <div
      class="absolute bottom-20 right-10 w-96 h-96 bg-[#9e2a2b] rounded-full filter blur-[120px] animate-pulse"
      style="animation-delay: 1s;"
    >
    </div>
  </div>

  <!-- Grid pattern overlay -->
  <div
    class="absolute inset-0 opacity-5"
    style="background-image: linear-gradient(#d4af37 1px, transparent 1px), linear-gradient(90deg, #d4af37 1px, transparent 1px); background-size: 50px 50px;"
  >
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <br />
    <div class="text-center mb-16 space-y-4">
      <h2 class="text-5xl md:text-6xl font-bold text-gray-900">
        Encuentra tu
        <span
          class="bg-gradient-to-r from-[#d4af37] via-[#f4d03f] to-[#d4af37] bg-clip-text text-transparent animate-gradient"
        >
          Brasargent
        </span>
        más cercano
      </h2>
      <br />
    </div>

    <!-- Grid de Sucursales - Grid cuadrado centrado -->
    <div class="flex justify-center">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          sucursales.map((sucursal) => (
            <div class="group relative w-full max-w-sm bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 flex flex-col">
              {/* Imagen de la sucursal */}
              <div class="relative h-56 overflow-hidden">
                <img
                  src={sucursal.image}
                  alt={sucursal.name}
                  class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                />
                {/* Badge de destacado */}
                {sucursal.featured && (
                  <div class="absolute top-4 right-4 bg-gradient-to-r from-[#d4af37] to-[#f4d03f] text-black text-xs font-bold px-4 py-2 rounded-full shadow-lg">
                    ⭐ DESTACADO
                  </div>
                )}
                {/* Overlay oscuro en la imagen */}
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent" />
              </div>

              {/* Contenido de la card - con grow para empujar botones abajo */}
              <div class="p-6 flex flex-col grow">
                {/* Nombre y rating */}
                <h3 class="text-2xl font-bold text-gray-900 mb-3">
                  {sucursal.name}
                </h3>

                <div class="flex items-center gap-2 mb-3">
                  <div class="flex items-center gap-1">
                    <span class="text-[#d4af37] text-lg">★</span>
                    <span class="text-gray-900 font-semibold">
                      {sucursal.rating}
                    </span>
                    <span class="text-gray-500 text-sm">
                      ({sucursal.reviews})
                    </span>
                  </div>
                  {sucursal.price && (
                    <span class="text-[#d4af37] font-semibold ml-auto">
                      {sucursal.price}
                    </span>
                  )}
                </div>

                {/* Tipo */}
                <p class="text-gray-600 text-sm mb-4">{sucursal.type}</p>

                {/* Dirección */}
                <div class="flex items-start gap-2 mb-3">
                  <svg
                    class="w-5 h-5 text-[#d4af37] mt-0.5 shrink-0"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                    />
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                    />
                  </svg>
                  <p class="text-gray-700 text-sm">{sucursal.address}</p>
                </div>

                {/* Horario */}
                {sucursal.hours && (
                  <div class="flex items-center gap-2 mb-4">
                    <svg
                      class="w-5 h-5 text-[#d4af37]"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                      />
                    </svg>
                    <div class="text-sm">
                      {sucursal.status && (
                        <span class="text-red-500 font-semibold">
                          {sucursal.status}
                        </span>
                      )}
                      <span class="text-gray-600"> · {sucursal.hours}</span>
                    </div>
                  </div>
                )}

                {/* Testimonial */}
                {sucursal.testimonial && (
                  <p class="text-gray-600 italic text-sm mb-4 line-clamp-2">
                    "{sucursal.testimonial}"
                  </p>
                )}

                {/* Spacer para empujar botones al final */}
                <div class="grow" />

                {/* Botones de Acción - Circulares - Siempre al final */}
                <div class="flex gap-6 items-center justify-center mt-4">
                  {/* Botón Ver Ubicación - Verde Google (Circular) */}
                  <a
                    href={`https://www.google.com/maps/search/?api=1&query=${encodeURIComponent(sucursal.name + " " + sucursal.address)}`}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="w-14 h-14 flex items-center justify-center bg-[#34A853] text-white rounded-full hover:bg-[#2d9348] hover:shadow-xl hover:shadow-[#34A853]/50 transition-all duration-300 hover:scale-110 group"
                    title="Ver ubicación en Google Maps"
                  >
                    <svg
                      class="w-6 h-6 group-hover:scale-110 transition-transform duration-300"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                      />
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                      />
                    </svg>
                  </a>

                  {/* Botón Ver Menú - Rojo Vino (Circular) - Abre Modal */}
                  <button
                    type="button"
                    data-modal-open="menu-modal"
                    data-sucursal-name={sucursal.name}
                    class="w-14 h-14 flex items-center justify-center bg-[#9e2a2b] text-white rounded-full hover:bg-[#8a2426] hover:shadow-xl hover:shadow-[#9e2a2b]/50 transition-all duration-300 hover:scale-110 group"
                    title="Ver nuestro menú"
                  >
                    <svg
                      class="w-6 h-6 group-hover:scale-110 transition-transform duration-300"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                      />
                    </svg>
                  </button>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
    <br />
    <br />
    <br />
    <br />
    {/* CTA Final */}
    <div class="mt-16 text-center">
      <div
        class="inline-block bg-white/80 backdrop-blur-xl rounded-2xl border border-gray-200 shadow-lg p-8"
      >
        <h3 class="text-2x1 font-bold text-gray-900 mb-4">
          <br />
          <br />
          ¿No encuentras tu sucursal más cercana?
        </h3>
        <p class="text-gray-600 mb-6">
          Contáctanos y te ayudaremos a encontrar la mejor opción para ti
        </p>
        <a
          href="/#contacto"
          class="inline-block bg-gradient-to-r from-[#9e2a2b] to-[#d4af37] text-white font-semibold px-8 py-4 rounded-full hover:shadow-lg hover:shadow-[#d4af37]/30 transition-all duration-300 hover:scale-105"
        >
          Contáctanos
        </a>
      </div>
    </div>
  </div>
  <br />
  <br />
  <br />
  <br />

  {/* Modal del Menú */}
  <div
    id="menu-modal"
    class="fixed inset-0 z-50 hidden items-center justify-center bg-black/70 backdrop-blur-sm"
    data-modal="menu-modal"
  >
    <div
      class="relative max-w-4xl w-full mx-auto bg-white rounded-3xl shadow-2xl overflow-hidden animate-modal-enter"
    >
      {/* Header del Modal con Logo */}
      <div class="relative bg-[#9e2a2b] p-6">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-4">
            <img
              src="/img/logo/logoRojo-SF.png"
              alt="Brasargent Logo"
              class="h-16 w-auto"
            />
          </div>

          <div class="text-white text-right">
            <h2 id="modal-sucursal-name" class="text-2xl font-bold">
              Brasargent
            </h2>
          </div>

          {/* Botón Cerrar */}
          <button
            type="button"
            data-modal-close="menu-modal"
            class="w-10 h-10 flex items-center justify-center bg-white/20 hover:bg-white/30 text-white rounded-full transition-all duration-300 hover:scale-110"
            title="Cerrar"
          >
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
      </div>

      {/* Barra de Navegación Sticky */}
      <div
        class="sticky top-0 z-10 bg-white border-b border-gray-200 shadow-md"
      >
        <nav
          class="flex justify-center items-center gap-6 py-4 px-6"
          id="menu-nav"
        >
          <button
            data-section="entradas"
            class="menu-nav-btn px-4 py-2 text-lg font-bold text-gray-600 hover:text-[#9e2a2b] hover:bg-gray-50 transition-all duration-300 border-b-2 border-transparent rounded-lg"
          >
            Entradas
          </button>
          <button
            data-section="cortes-clasicos"
            class="menu-nav-btn px-4 py-2 text-lg font-bold text-gray-600 hover:text-[#9e2a2b] hover:bg-gray-50 transition-all duration-300 border-b-2 border-transparent rounded-lg"
          >
            Cortes Clásicos
          </button>
          <button
            data-section="platos-premium"
            class="menu-nav-btn px-4 py-2 text-lg font-bold text-gray-600 hover:text-[#9e2a2b] hover:bg-gray-50 transition-all duration-300 border-b-2 border-transparent rounded-lg"
          >
            Platos Premium
          </button>
          <button
            data-section="cortes-junior"
            class="menu-nav-btn px-4 py-2 text-lg font-bold text-gray-600 hover:text-[#9e2a2b] hover:bg-gray-50 transition-all duration-300 border-b-2 border-transparent rounded-lg"
          >
            Cortes Junior
          </button>
          <button
            data-section="bebidas"
