---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
---

<Layout
  title="Contacto - Brasargent Rodizio"
  description="Contáctanos para reservas, eventos especiales o consultas. Estamos en Patio Design, Santa Cruz. Llámanos al 78555886."
>
  <Navbar />

  <!-- Hero de Contacto -->
  <section
    class="relative h-[50vh] flex items-center justify-center overflow-hidden brasas-overlay"
  >
    <div class="absolute inset-0 z-0">
      <img
        src="/restaurant.jpg"
        alt="Contacto Brasargent"
        class="w-full h-full object-cover"
      />
    </div>

    <div class="relative z-10 text-center px-6 max-w-4xl mx-auto">
      <h1 class="text-white mb-6">
        <span class="text-gradient">Contáctanos</span>
      </h1>
      <p class="text-white/90 text-xl md:text-2xl">
        Estamos listos para atenderte y hacer de tu visita una experiencia
        inolvidable
      </p>
    </div>
  </section>

  <!-- Formulario y Info de Contacto -->
  <section class="py-24 bg-gradient-to-b from-[var(--color-cream)] to-white">
    <div class="max-w-7xl mx-auto px-6">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
        <!-- Formulario de Contacto -->
        <div>
          <h2 class="mb-6">
            Envíanos un <span class="text-gradient">Mensaje</span>
          </h2>
          <p class="text-[var(--color-carbon)]/70 text-lg mb-8">
            Completa el formulario y nos pondremos en contacto contigo lo antes
            posible
          </p>

          <form id="contact-form" class="space-y-6">
            <div>
              <label
                for="name"
                class="block text-[var(--color-carbon)] font-semibold mb-2"
              >
                Nombre Completo *
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 rounded-lg border-2 border-[var(--color-wood)]/30 focus:border-[var(--color-terracotta)] focus:outline-none transition-colors"
                placeholder="Tu nombre"
              />
            </div>

            <div>
              <label
                for="email"
                class="block text-[var(--color-carbon)] font-semibold mb-2"
              >
                Email *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 rounded-lg border-2 border-[var(--color-wood)]/30 focus:border-[var(--color-terracotta)] focus:outline-none transition-colors"
                placeholder="tu@email.com"
              />
            </div>

            <div>
              <label
                for="phone"
                class="block text-[var(--color-carbon)] font-semibold mb-2"
              >
                Teléfono *
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                required
                class="w-full px-4 py-3 rounded-lg border-2 border-[var(--color-wood)]/30 focus:border-[var(--color-terracotta)] focus:outline-none transition-colors"
                placeholder="78555886"
              />
            </div>

            <div>
              <label
                for="guests"
                class="block text-[var(--color-carbon)] font-semibold mb-2"
              >
                Número de Personasss
              </label>
              <select
                id="guests"
                name="guests"
                class="w-full px-4 py-3 rounded-lg border-2 border-[var(--color-wood)]/30 focus:border-[var(--color-terracotta)] focus:outline-none transition-colors"
              >
                <option value="1-2">1-2 personas</option>
                <option value="3-4">3-4 personas</option>
                <option value="5-6">5-6 personas</option>
                <option value="7-10">7-10 personas</option>
                <option value="10+">Más de 10 personas</option>
              </select>
            </div>

            <div>
              <label
                for="date"
                class="block text-[var(--color-carbon)] font-semibold mb-2"
              >
                Fecha Preferida
              </label>
              <input
                type="date"
                id="date"
                name="date"
                class="w-full px-4 py-3 rounded-lg border-2 border-[var(--color-wood)]/30 focus:border-[var(--color-terracotta)] focus:outline-none transition-colors"
              />
            </div>

            <div>
              <label
                for="message"
                class="block text-[var(--color-carbon)] font-semibold mb-2"
              >
                Mensaje
              </label>
              <textarea
                id="message"
                name="message"
                rows="4"
                class="w-full px-4 py-3 rounded-lg border-2 border-[var(--color-wood)]/30 focus:border-[var(--color-terracotta)] focus:outline-none transition-colors resize-none"
                placeholder="Cuéntanos sobre tu reserva o consulta..."
              ></textarea>
            </div>

            <button type="submit" class="btn-primary w-full">
              Enviar Mensaje
            </button>

            <div
              id="form-message"
              class="hidden p-4 rounded-lg text-center font-semibold"
            >
            </div>
          </form>
        </div>

        <!-- Información de Contacto -->
        <div>
          <h2 class="mb-6">
            Información de <span class="text-gradient">Contacto</span>
          </h2>

          <div class="space-y-8 mb-12">
            <!-- Teléfono -->
            <div class="flex items-start gap-4">
              <div
                class="w-14 h-14 bg-gradient-to-br from-[var(--color-terracotta)] to-[var(--color-gold)] rounded-full flex items-center justify-center flex-shrink-0"
              >
                <svg
                  class="w-7 h-7 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  ></path>
                </svg>
              </div>
              <div>
                <h4 class="font-bold text-xl mb-2">Teléfono</h4>
                <a
                  href="tel:78555886"
                  class="text-[var(--color-terracotta)] hover:text-[var(--color-gold)] transition-colors text-2xl font-semibold"
                >
                  78555886
                </a>
                <p class="text-[var(--color-carbon)]/70 mt-1">
                  Lun - Dom: 12:00 - 23:00
                </p>
              </div>
            </div>

            <!-- Email -->
            <div class="flex items-start gap-4">
              <div
                class="w-14 h-14 bg-gradient-to-br from-[var(--color-terracotta)] to-[var(--color-gold)] rounded-full flex items-center justify-center flex-shrink-0"
              >
                <svg
                  class="w-7 h-7 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
              </div>
              <div>
                <h4 class="font-bold text-xl mb-2">Email</h4>
                <a
                  href="mailto:brasargentchurrasquerias@gmail.com"
                  class="text-[var(--color-terracotta)] hover:text-[var(--color-gold)] transition-colors break-all"
                >
                  brasargentchurrasquerias@gmail.com
                </a>
              </div>
            </div>

            <!-- Dirección -->
            <div class="flex items-start gap-4">
              <div
                class="w-14 h-14 bg-gradient-to-br from-[var(--color-terracotta)] to-[var(--color-gold)] rounded-full flex items-center justify-center flex-shrink-0"
              >
                <svg
                  class="w-7 h-7 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                  ></path>
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-bold text-xl mb-2">Ubicación</h4>
                <p class="text-[var(--color-carbon)]/70">
                  Patio Design<br />
                  Av. Busch 3er anillo<br />
                  Santa Cruz de la Sierra, Bolivia
                </p>
              </div>
            </div>

            <!-- Horarios -->
            <div class="flex items-start gap-4">
              <div
                class="w-14 h-14 bg-gradient-to-br from-[var(--color-terracotta)] to-[var(--color-gold)] rounded-full flex items-center justify-center flex-shrink-0"
              >
                <svg
                  class="w-7 h-7 text-white"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <div>
                <h4 class="font-bold text-xl mb-2">Horarios</h4>
                <div class="text-[var(--color-carbon)]/70 space-y-1">
                  <p>Lunes - Jueves: 12:00 - 23:00</p>
                  <p>Viernes - Sábado: 12:00 - 00:00</p>
                  <p>Domingo: 12:00 - 22:00</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Redes Sociales -->
          <div
            class="bg-white rounded-2xl p-8 shadow-lg border border-[var(--color-wood)]/20"
          >
            <h4 class="font-bold text-xl mb-4">Síguenos en Redes Sociales</h4>
            <div class="flex gap-4">
              <a
                href="https://facebook.com/brasargent"
                target="_blank"
                rel="noopener noreferrer"
                class="w-12 h-12 bg-gradient-to-br from-[var(--color-terracotta)] to-[var(--color-gold)] hover:scale-110 rounded-full flex items-center justify-center transition-all"
              >
                <svg
                  class="w-6 h-6 text-white"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
                  ></path>
                </svg>
              </a>
              <a
                href="https://instagram.com/brasargent"
                target="_blank"
                rel="noopener noreferrer"
                class="w-12 h-12 bg-gradient-to-br from-[var(--color-terracotta)] to-[var(--color-gold)] hover:scale-110 rounded-full flex items-center justify-center transition-all"
              >
                <svg
                  class="w-6 h-6 text-white"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
                  ></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Mapa -->
  <section class="h-[500px]">
    <iframe
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3799.7!2d-63.1812!3d-17.7833!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMTfCsDQ2JzU5LjkiUyA2M8KwMTAnNTIuMyJX!5e0!3m2!1ses!2sbo!4v1234567890"
      width="100%"
      height="100%"
      style="border:0;"
      allowfullscreen=""
      loading="lazy"
      title="Ubicación Brasargent Rodizio"></iframe>
  </section>

  <Footer />
</Layout>

<script>
  // Form handling
  const form = document.getElementById("contact-form") as HTMLFormElement;
  const formMessage = document.getElementById("form-message");

  form?.addEventListener("submit", async (e) => {
    e.preventDefault();

    // Get form data
    const formData = new FormData(form);
    const data = Object.fromEntries(formData);

    // Show loading state
    const submitBtn = form.querySelector(
      'button[type="submit"]',
    ) as HTMLButtonElement;
    const originalText = submitBtn.textContent;
    submitBtn.textContent = "Enviando...";
    submitBtn.disabled = true;

    // Simulate form submission (replace with actual API call)
    setTimeout(() => {
      // Show success message
      if (formMessage) {
        formMessage.textContent =
          "¡Mensaje enviado con éxito! Nos pondremos en contacto contigo pronto.";
        formMessage.className =
          "p-4 rounded-lg text-center font-semibold bg-green-100 text-green-800";
        formMessage.classList.remove("hidden");
      }

      // Reset form
      form.reset();

      // Reset button
      submitBtn.textContent = originalText;
      submitBtn.disabled = false;

      // Hide message after 5 seconds
      setTimeout(() => {
        formMessage?.classList.add("hidden");
      }, 5000);
    }, 1500);
  });
</script>

<style>
  input:focus,
  select:focus,
  textarea:focus {
    box-shadow: 0 0 0 3px rgba(158, 42, 43, 0.1);
  }
</style>
